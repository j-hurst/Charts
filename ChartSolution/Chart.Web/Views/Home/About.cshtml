@{
    ViewBag.Title = "About";
    var chart = new Chart();
    chart.Rows = 4;
    chart.Columns = 4;
}

<div class="gridster">
    <ul>
        @for (int x = 1; x <= chart.Rows; x++)
        {
            for (int y = 1; y <= chart.Columns; y++)
            {
                <li data-row="@x" data-col="@y" data-sizex="1" data-sizey="1">
                    <div id="@string.Format("container-{0}-{1}", x, y)" style="width: 100%; height: 100%; border: 1px solid black;"></div>
                </li>
            }
        }
    </ul>
</div>

@functions {
    public class Chart
    {
        public int Rows { get; set; }
        public int Columns { get; set; }
    }
}


@section scripts {
    <script type="text/javascript">
        $(function () {
            $(".gridster ul").gridster({
                widget_margins: [10, 10],
                widget_base_dimensions: [350, 400]
            });

            var myCharts = [
                {
                    'type': 'bar',
                    'title': 'Fruit Consumption',
                    'xAxis': {
                        'title': 'Fruit',
                        'categories': ['Apples', 'Bananas', 'Oranges']
                    },
                    'yAxis': {
                        'title': 'Fruit Eaten'
                    },
                    'dataPoints': [
                        {
                            'name': 'Jane',
                            'data': [1, 0, 4]
                        },
                        {
