                        },
                    ]
                },
                {
                    'type': 'pie',
                    'title': 'Browser Share',
                    'yAxis': {
                        'title': 'Browser'
                    },
                    'dataPoints': [
                        {
                            'name': 'Chrome',
                            'y': 50,
                            sliced: true,
                            selected: true
                        },
                        {
                            'name': 'IE',
                            'y': 10
                        },
                        {
                            'name': 'Firefox',
                            'y': 40
                        },
                    ]
                }
            ];

            for (i = 0; i < myCharts.length; i++) {
                switch (myCharts[i].type) {
                    case 'bar':
                        var mychart = Highcharts.chart('container-1-' + (i + 1), {
                            chart: {
                                type: myCharts[i].type
                            },
                            title: {
                                useHTML: true,
                                align: 'left',
                                text: '<div>' + myCharts[i].title + '</div>'
                            },
                            xAxis: {
                                title: {
                                    text: myCharts[i].xAxis.title
                                },
                                categories: myCharts[i].xAxis.categories
                            },
                            yAxis: {
                                title: {
                                    text: myCharts[i].yAxis.title
                                }
                            },
                            series: myCharts[i].dataPoints,
                            navigation: {
                                menuItemStyle: {
                                    fontWeight: 'normal',
                                    background: 'none'
                                },
                                menuItemHoverStyle: {
                                    fontWeight: 'bold',
                                    background: 'none',
                                    color: 'black'
                                }
                            }
                        });
                        break;
                    case 'pie':
                        var mychart = Highcharts.chart('container-1-' + (i + 1), {
                            chart: {
                                type: myCharts[i].type
                            },
                            title: {
                                useHTML: true,
                                align: 'left',
                                text: '<div>' + myCharts[i].title + '</div>'
                            },
                            plotOptions: {
                                pie: {
                                    allowPointSelect: true,
                                    cursor: 'pointer',
                                    dataLabels: {
                                        enabled: false
                                    },
                                    showInLegend: 'true'
                                }
                            },
                            series: [{
                                name: myCharts[i].yAxis.title,
                                colorByPoint: true,
                                data: myCharts[i].dataPoints
                            }],
                            navigation: {
                                menuItemStyle: {
                                    fontWeight: 'normal',
                                    background: 'none'
                                },
                                menuItemHoverStyle: {
                                    fontWeight: 'bold',
                                    background: 'none',
                                    color: 'black'
                                }
                            }
                        });
                        break;
                }
                
            }

